<!DOCTYPE html>
<html>
<head>
    <title>Quiz do Agrinho</title>
</head>
<body>

<!-- Botão para responder à pergunta -->
<button onclick="responderPergunta()">Responder</button>

<!-- Áudio escondido para quando uma pergunta é respondida corretamente -->
<audio id="respostaCorretaAudio" src="caminho/do/seu/arquivo/de/audio.mp3" preload="auto"></audio>

<script>
function responderPergunta() {
  // Aqui você adicionaria a lógica para verificar se a resposta está correta
  var respostaCorreta = true; // Supondo que a resposta está correta

  if (respostaCorreta) {
    // Se a resposta estiver correta, reproduzir o som
    var audio = document.getElementById("respostaCorretaAudio");
    audio.play();
  } else {
    // Caso contrário, faça algo diferente
  }
}
</script>

</body>
</html>
